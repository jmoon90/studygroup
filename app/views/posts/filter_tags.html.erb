<div class='row' style=>
  <h3 style="text-align: center; margin-top:15px">
    <%= "Posts for #{@tag.name}" %>
  </h3>
</div>

<div class='row' style="align:center;">
  <% @posts.each do |post| %>
    <div class="small-12 medium-6 medium-offset-1 columns">
        <%= link_to post.title, post_path(post)  %>
    </div>
  <% end %>
</div>
