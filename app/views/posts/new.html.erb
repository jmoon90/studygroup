<div class='row' style=>
  <div class="small-12 medium-6 medium-centered columns">
    <h3>New Posts</h3>
  </div>
</div>

<div class='row'>
  <div class="small-12 medium-6 medium-centered columns">
    <%= simple_form_for(@post) do |f| %>
        <%= f.input :title %>
        <%= f.input :description, as: :text %>
        <%= f.input :tag_list %>

      <div class="row">
        <div class='small-12 columns'>
          <%= f.submit 'Post', class: "button expand" %>
        </div>
      </div>
    <% end %>
    </div>
</div>
